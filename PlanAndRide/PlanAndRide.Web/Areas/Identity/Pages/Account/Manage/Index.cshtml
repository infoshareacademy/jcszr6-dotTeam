@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <form id="profile-form" method="post">
        <div class="col-md-6 display-inline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Login" class="form-control" disabled />
                <label asp-for="Login" class="form-label"></label>
            </div>
            <div class="form-floating">                
                <input asp-for="Input.FirstName" class="form-control" />
                <label asp-for="Input.FirstName" class="form-label"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">                
                <input asp-for="Input.BikeName" class="form-control" />
                <label asp-for="Input.BikeName" class="form-label"></label>
                <span asp-validation-for="Input.BikeName" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-outline-info grey-button">Save</button>

        </div>
